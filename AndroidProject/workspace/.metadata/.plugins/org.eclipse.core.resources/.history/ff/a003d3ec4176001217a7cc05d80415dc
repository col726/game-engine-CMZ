package MainPkg;

public class clsGameLoop {
	public void MainGameLoop() {
    System.out.println("Class - clsGameLoop -- function - PlayGame");
    PlayGameLoop();
}
	public void PlayGameLoop(){
	boolean lFinished;
	lFinished = false;
	int intCounter;
	intCounter=0;
	
	while (!lFinished){
		System.out.println("***In the PLayGameLoop");
	intCounter++;
	if (intCounter > 9){
		lFinished = true;
	}
	}
	}
}
